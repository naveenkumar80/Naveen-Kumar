{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover joy: Your ultimate holiday gift destination. Explore curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary Button Label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ]
}
{% endschema %}

<div class="gift-banner" 
     style="background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');">
  <div class="gift-banner__overlay">
    <div class="gift-banner__content">
      {% if section.settings.subtitle != blank %}
        <p class="gift-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="gift-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="gift-description">{{ section.settings.description }}</p>
      {% endif %}

      <div class="gift-buttons">
        {% if section.settings.primary_button_label != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="gift-btn primary-btn">
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_label != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="gift-btn secondary-btn">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.gift-banner {
  position: relative;
  background-size: cover;
  background-position: center;
  text-align: center;
  padding: 100px 20px;
  color: #fff;
}

.gift-banner__overlay {
  background: rgba(0, 0, 0, 0.4); /* dark overlay */
  padding: 60px 20px;
}

.gift-subtitle {
  font-size: 16px;
  color: #FFD600; /* Yellow accent */
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.gift-title {
  font-size: 42px;
  font-weight: bold;
  margin-bottom: 15px;
}

.gift-description {
  font-size: 18px;
  margin-bottom: 25px;
}

.gift-buttons {
  margin-top: 20px;
}

.gift-btn {
  display: inline-block;
  padding: 12px 22px;
  font-weight: 600;
  border-radius: 4px;
  transition: all 0.3s ease;
  text-decoration: none;
}

.primary-btn {
  background: #FFD600; /* yellow */
  color: #000;
}

.primary-btn:hover {
  transform: scale(1.05);
}

.secondary-btn {
  background: #000;
  color: #fff;
  margin-left: 12px;
}

.secondary-btn:hover {
  transform: scale(1.05);
}
</style>
